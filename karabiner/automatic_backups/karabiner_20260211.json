{
  "global": { "show_in_menu_bar": false },
  "profiles": [
    {
      "complex_modifications": {
        "rules": [
          {
            "description": "Swap left-ctrl and command only in Ghostty, but allow Cmd+Ctrl combos",
            "manipulators": [
              {
                "conditions": [
                  {
                    "bundle_identifiers": ["^com\\.mitchellh\\.ghostty$"],
                    "type": "frontmost_application_if"
                  }
                ],
                "from": {
                  "key_code": "left_command",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [{ "key_code": "left_control" }],
                "to_delayed_action": {
                  "to_if_canceled": [{ "key_code": "left_command" }]
                },
                "type": "basic"
              },
              {
                "conditions": [
                  {
                    "bundle_identifiers": ["^com\\.mitchellh\\.ghostty$"],
                    "type": "frontmost_application_if"
                  }
                ],
                "from": {
                  "key_code": "left_control",
                  "modifiers": { "optional": ["any"] }
                },
                "to": [{ "key_code": "left_command" }],
                "to_delayed_action": {
                  "to_if_canceled": [{ "key_code": "left_control" }]
                },
                "type": "basic"
              }
            ]
          },
          {
            "description": "Toggle focus with f6",
            "manipulators": [
              {
                "from": { "key_code": "f6" },
                "to": [{ "shell_command": "shortcuts run 'Toggle Focus'" }],
                "type": "basic"
              }
            ]
          },

          {
            "description": "option + hjkl → arrow keys",
            "manipulators": [
              {
                "from": {
                  "key_code": "h",
                  "modifiers": { "mandatory": ["option"] }
                },
                "to": [{ "key_code": "left_arrow" }],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "j",
                  "modifiers": { "mandatory": ["option"] }
                },
                "to": [{ "key_code": "down_arrow" }],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "k",
                  "modifiers": { "mandatory": ["option"] }
                },
                "to": [{ "key_code": "up_arrow" }],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "l",
                  "modifiers": { "mandatory": ["option"] }
                },
                "to": [{ "key_code": "right_arrow" }],
                "type": "basic"
              }
            ]
          },

          {
            "description": "option + shift + hjkl → option + arrow keys (word jump)",
            "manipulators": [
              {
                "from": {
                  "key_code": "h",
                  "modifiers": { "mandatory": ["option", "shift"] }
                },
                "to": [
                  {
                    "key_code": "left_arrow",
                    "modifiers": ["option"]
                  }
                ],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "j",
                  "modifiers": { "mandatory": ["option", "shift"] }
                },
                "to": [
                  {
                    "key_code": "down_arrow",
                    "modifiers": ["option"]
                  }
                ],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "k",
                  "modifiers": { "mandatory": ["option", "shift"] }
                },
                "to": [
                  {
                    "key_code": "up_arrow",
                    "modifiers": ["option"]
                  }
                ],
                "type": "basic"
              },
              {
                "from": {
                  "key_code": "l",
                  "modifiers": { "mandatory": ["option", "shift"] }
                },
                "to": [
                  {
                    "key_code": "right_arrow",
                    "modifiers": ["option"]
                  }
                ],
                "type": "basic"
              }
            ]
          },

          {
            "description": "Right Command + T opens or focuses terminal (Ghostty)",
            "manipulators": [
              {
                "from": {
                  "key_code": "t",
                  "modifiers": { "mandatory": ["right_command"] }
                },
                "to": [{ "shell_command": "open -a 'Ghostty'" }],
                "type": "basic"
              }
            ]
          },
          {
            "description": "Right Command + B opens or focuses default browser (Arc)",
            "manipulators": [
              {
                "from": {
                  "key_code": "b",
                  "modifiers": { "mandatory": ["right_command"] }
                },
                "to": [{ "shell_command": "open -a 'Arc'" }],
                "type": "basic"
              }
            ]
          },
          {
            "description": "Lock button",
            "manipulators": [
              {
                "from": {
                  "key_code": "insert"
                },
                "to": [{ "shell_command": "shortcuts run 'Lock'" }]
              }
            ]
          }
        ]
      },
      "devices": [
        {
          "identifiers": {
            "is_keyboard": true,
            "is_pointing_device": true,
            "product_id": 12870,
            "vendor_id": 6645
          },
          "ignore": false
        }
      ],
      "name": "Default profile",
      "selected": true,
      "simple_modifications": [
        {
          "from": { "key_code": "caps_lock" },
          "to": [{ "key_code": "escape" }]
        }
      ],
      "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
    }
  ]
}
