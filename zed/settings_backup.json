// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // UI
  "ui_font_size": 16,
  "buffer_font_size": 14,
  // Youtube
  // "ui_font_size": 18,
  // "buffer_font_size": 18,
  "tab_size": 2,
  "confirm_quit": true,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "relative_line_numbers": true,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Gruvbox Dark"
  },
  "vim_mode": true,
  "cursor_blink": false,
  "terminal": {
    "font_size": 13,
    "dock": "right"
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  "assistant": {
    "enabled": false,
    "version": "2",
    "dock": "right"
  },
  // Indentation, rainbow indentation
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "inlay_hints": {
    "enabled": false
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "chat_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "features": {
    "inline_completion_provider": "supermaven"
  },

  // Langs
  "languages": {
    "TypeScript": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Vue.js": {
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Prisma": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "tailwindcss-language-server": {
      "settings": {
        "classAttributes": ["class", "className", "ngClass", "styles"]
      }
    },
    "C": {
      "format_on_save": "on",
      "tab_size": 2
    }
  }
}
